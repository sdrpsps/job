.content {
  margin: 0 30rpx;
}
.content .sent .item {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  margin-top: 28rpx;
  border-radius: 20rpx;
  box-shadow: 0px 0px 10px #D8E2EF;
}
.content .sent .item .top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 36rpx;
}
.content .sent .item .top .jobName {
  color: #333;
  margin-bottom: 20rpx;
}
.content .sent .item .top .salary {
  color: #149639;
}
.content .sent .item .mid {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-size: 20rpx;
  color: #333;
}
.content .sent .item .mid .info {
  margin-bottom: 20rpx;
}
.content .sent .item .mid .welfare {
  display: flex;
  margin-bottom: 30rpx;
}
.content .sent .item .mid .welfare .welfareItem {
  padding: 8rpx 16rpx;
  margin-right: 10rpx;
  border-radius: 10rpx;
  background-color: #F4F4F4;
}
.content .sent .item .bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.content .sent .item .bottom .companyInfo {
  display: flex;
  align-items: center;
}
.content .sent .item .bottom .companyInfo .left {
  margin-right: 14rpx;
}
.content .sent .item .bottom .companyInfo .left image {
  width: 60rpx;
  height: 60rpx;
}
.content .sent .item .bottom .companyInfo .right {
  display: flex;
  flex-direction: column;
  color: #333;
}
.content .sent .item .bottom .companyInfo .right .companyName {
  font-size: 24rpx;
}
.content .sent .item .bottom .companyInfo .right .company {
  font-size: 18rpx;
}
.content .sent .item .bottom .btn {
  height: 50rpx;
}

