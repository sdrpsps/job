page {
  background-color: #F4F4F4;
}
.safe-padding {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  box-sizing: content-box;
}
.content .jobBox .item {
  display: flex;
  flex-direction: column;
  margin: 30rpx;
  padding: 20rpx 20rpx 0 20rpx;
  border-radius: 20rpx;
  box-shadow: 0px 0px 20px #D9EEDF;
  background-color: #fff;
}
.content .jobBox .item .top {
  display: flex;
  justify-content: space-between;
  font-size: 36rpx;
}
.content .jobBox .item .top .jobName {
  color: #333;
  margin-bottom: 20rpx;
}
.content .jobBox .item .top .salary {
  color: #149639;
}
.content .jobBox .item .mid {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-size: 20rpx;
  color: #333;
  border-bottom: 1px solid #F4F4F4;
}
.content .jobBox .item .mid .info {
  margin-bottom: 20rpx;
}
.content .jobBox .item .mid .welfare {
  display: flex;
  margin-bottom: 30rpx;
}
.content .jobBox .item .mid .welfare .welfareItem {
  padding: 8rpx 16rpx;
  margin-right: 10rpx;
  border-radius: 10rpx;
  background-color: #F4F4F4;
}
.content .jobBox .item .bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
}
.content .jobBox .item .bottom .talkInfo {
  font-size: 24rpx;
  color: #333;
}
.content .message {
  margin: 0 30rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: calc(env(safe-area-inset-bottom) + 80rpx);
}
.content .message .in {
  display: flex;
  align-items: center;
  padding-bottom: 30rpx;
}
.content .message .in .avatar {
  margin-right: 30rpx;
}
.content .message .in .text {
  background-color: #fff;
  font-size: 26rpx;
  color: #333;
  padding: 25rpx;
  border-radius: 30rpx;
}
.content .message .out {
  display: flex;
  align-items: center;
  flex-direction: row-reverse;
  padding-bottom: 30rpx;
}
.content .message .out .avatar {
  margin-left: 30rpx;
}
.content .message .out .text {
  background-color: #fff;
  font-size: 26rpx;
  color: #333;
  padding: 25rpx;
  border-radius: 30rpx;
}
.content .input {
  background-color: #fff;
  width: 100%;
  position: fixed;
  bottom: 0;
}

